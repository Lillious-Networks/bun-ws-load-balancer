{
  "name": "bun-load-balancer",
  "module": "index.ts",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "build-shard-windows-x64": "bun build --target=bun-windows-x64 './servers/shard/index.ts' --compile --outfile ./dist/win32/x64/shard_server",
    "build-realm-windows-x64": "bun build --target=bun-windows-x64 './servers/realm/index.ts' --compile --outfile ./dist/win32/x64/realm_server",
    "build-shard-windows": "bun build-shard-windows-x64",
    "build-realm-windows": "bun build-realm-windows-x64",
    "build-windows": "bun build-shard-windows && bun build-realm-windows",
    "build-shard-linux-x64": "bun build --target=bun-linux-x64 './servers/shard/index.ts' --compile --outfile ./dist/linux/x64/shard_server",
    "build-realm-linux-x64": "bun build --target=bun-linux-x64 './servers/realm/index.ts' --compile --outfile ./dist/linux/x64/realm_server",
    "build-shard-linux": "bun build-shard-linux-x64",
    "build-realm-linux": "bun build-realm-linux-x64",
    "build-linux": "bun build-shard-linux && bun build-realm-linux",
    "build-shard-darwin-x64": "bun build --target=bun-darwin-x64 './servers/shard/index.ts' --compile --outfile ./dist/darwin/x64/shard_server",
    "build-realm-darwin-x64": "bun build --target=bun-darwin-x64 './servers/realm/index.ts' --compile --outfile ./dist/darwin/x64/realm_server",
    "build-shard-darwin": "bun build-shard-darwin-x64",
    "build-realm-darwin": "bun build-realm-darwin-x64",
    "build-darwin": "bun build-shard-darwin && bun build-realm-darwin",
    "build": "bun build-windows && bun build-linux && bun build-darwin"
  }
}